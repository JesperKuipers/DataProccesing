{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "JSON schema",
  "description": "Schema that is made for the Steam Dataset made in 2016 (https://steam.internet.byu.edu/)",
  "default": [],
  "examples": [
    {
      "appid": "number",
      "Title": {
        "type": "string"
      },
      "Rating": {
        "type": "number",
        "minimum": -1,
        "maximum": 100
      },
      "Developer": [
        {
          "Developer": {
            "type": "string"
          }
        }
      ],
      "Publisher": [
        {
          "Publisher": {
            "type": "string"
          }
        }
      ],
      "Players": [
        {
          "steamid": 1,
          "loccountrycode": {
            "type": "string",
            "minimum": 1,
            "maximum": 3,
            "description": "string, ISO-3166 code for the country"
          },
          "playtime_forever": {
            "type": "number",
            "description": "time in minutes"
          },
          "playtime_2weeks": {
            "type": "number",
            "description": "time in minutes"
          }
        }
      ]
    }
  ]
}